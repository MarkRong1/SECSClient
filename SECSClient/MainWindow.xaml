<Window x:Class="SECSClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SECSClient"
        mc:Ignorable="d"
        Title="WPF SECS Client (Passive)" Height="520" Width="900"
        FontFamily="Consolas">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="8">
            <TextBlock Text="Status:" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtStatus" Margin="8,0,0,0" VerticalAlignment="Center"/>
            <Button Content="Clear" Margin="16,0,0,0" Click="Clear_Click"/>
            <CheckBox x:Name="chkAutoScroll" Content="自動捲動" Margin="10,0,0,0" />
        </StackPanel>

        <ListBox Grid.Row="1" x:Name="lstLog" Margin="8"/>

    </Grid>
</Window>
